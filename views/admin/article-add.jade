extends ./layout
block link
    link(rel='stylesheet', href='/bower_components/editor.md/css/editormd.css')
block admin-header
    dl(class="brumb clearfix")
        dt
            span 当前位置：列表
        dd
            span 可操作
            a(href="/admin/article/add") 新建文章
block content
    div(class="main-content")
        form(role="form" class="arform")
            input(type="hidden" name="user" value="#{user.id}")
            div(class="form-group")
                input(name="name" type="text" class="form-control" placeholder="文章标题")
            div(class="form-group")
                select(class="form-control" name="category")
                    each val,index in categorys
                        option(value="#{val.id}") #{val.name}
            div(class="form-group")
                div(id="test-editormd")
            button(id="adt-btn" type="button" class="btn btn-lg btn-info") 发布
block script
    script(type="text/javascript" src="../../bower_components/editor.md/src/editormd.js")
    script(type="text/javascript" src="/js/module/admin.min.js")
