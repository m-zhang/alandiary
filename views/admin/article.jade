extends ./layout
block link
    link(rel='stylesheet', href='/css/admin.css')
block admin-header
    dl(class="brumb clearfix")
        dt
            span 当前位置：列表
        dd
            span 可操作
            a(href="/admin/article/add") 新建文章
block content
    div(class="main-content")
        div(class="z-row")
            div(class="l80")
                table(class="table table-striped")
                    tr
                        th 序号
                        th 标题
                        th 创建时间
                        th(colspan="2") 操作
                    each val,index in articles
                        tr
                            td #{index+1}
                            td #{val.name}
                            td #{val.date}
                            td
                                a(href="/admin/article/edit/#{val.id}" target="_blank") Edit
                            td
                                form( method="post" action="/admin/article/delete/#{val.id}?_method=DELETE" )
                                    button(type="submit" class="btn btn-default") Delete
            div(class="l20")
                img(src="/uploads/1481617323814.jpg" alt="" style="width:100%;")
    div(class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
        div(class="modal-dialog")
            form(class="form-horizontal" role="form" action="/admin/addLabel" method="post")
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button" class="close" data-dismiss="modal")
                            span(aria-hidden="true") &times;
                            span(class="sr-only") Close
                        h4(class="modal-title" id="myModalLabel")  新增文章分类
                    div(class="modal-body")
                        div(class="form-group")
                            div(class="col-sm-12")
                                input(name="label" class="form-control" id="inputLable" placeholder="Label")
                    div(class="modal-footer")
                        button(ype="button" class="btn btn-default" data-dismiss="modal") Close
                        button(type="submit" class="btn btn-primary") 保存

block script
    script(src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js")